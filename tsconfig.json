{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2018",
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "ignorePatterns": ["node_modules"]
}
